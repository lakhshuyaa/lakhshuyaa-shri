def find_pivot(arr):
    n = len(arr)
    total_sum = sum(arr)
    left_sum = 0

    for i in range(n):
        right_sum = total_sum - left_sum - arr[i]
        if left_sum == right_sum:
            return i
        left_sum += arr[i]

    return -1  # not found

n = int(input())
arr = [int(input()) for _ in range(n)]

pivot_index = find_pivot(arr)
print(pivot_index)
